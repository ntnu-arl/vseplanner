<launch>
    <arg name="use_sim_time" default="true" />
    <arg name="mav_name" default="delta" />
    <arg name="world_name" default="basic"/>
    <arg name="enable_logging" default="false" />
    <arg name="enable_ground_truth" default="true" />
    <arg name="log_file" default="$(arg mav_name)" />

    <arg name="subscript" default="" />
    <arg name="param_file" value="$(find interface_vsep_rotors)/../../launch/sim_vsep_LMF.yaml" />
    <arg name="pcl_topic" value="/delta/rgbd/camera_depth/depth/points" />

    <group ns="$(arg mav_name)$(arg subscript)">
        <node name="vsePlanner" pkg="vseplanner" type="vsePlanner" output="screen" >
            <param name="tf_frame" type="string" value="navigation" />
            <param name="body_frame" type="string" value="delta/base_link" />
            <param name="resolution" type="double" value="0.3" />
            <param name="visualize_max_z" type="double" value="3.0" />
            <param name="sensor_max_range" type="double" value="10.0" />
            <param name="map_publish_frequency" type="double" value="2.0" />
            <remap from="cam0/camera_info" to="/delta/rgbd/camera_rgb/camera_info"/>
            <remap from="cam1/camera_info" to="/delta/rgbd/camera_rgb/camera_info"/>
            <remap from="pointcloud_throttled" to="$(arg pcl_topic)"/>
            <remap from="pose" to="/$(arg mav_name)$(arg subscript)/ground_truth/pose_with_covariance"/>
            <remap from="vseplanner" to="/$(arg mav_name)$(arg subscript)/vseplanner"/>
            <remap from="image_saliency" to="/saliency/image_norm"/>
            <remap from="image_info" to="/delta/rgbd/camera_rgb/camera_info"/>
            <rosparam command="load" file="$(arg param_file)" />
        </node>
    </group>
</launch>